<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.main.tabs.VoteFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="24sp"
        android:text="Голосование по вопросу:" />

    <TextView
        android:text="Замена прошлогодней плитки на московскую"
        android:id="@+id/vote_title"
        android:textSize="30sp"
        android:gravity="center"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="Решение принимается при 50% голосов от числа принявших участие (!) в собрании собственников" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:textSize="20sp"
        android:text="Оставьте свой голос:" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vote_yes"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="fill_parent"
        android:layout_marginHorizontal="96dp"
        android:layout_height="wrap_content"
        android:backgroundTint="#27D3B4"
        android:layout_marginBottom="40dp"
        android:text="За" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vote_no"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:layout_marginHorizontal="96dp"
        android:backgroundTint="#5796AA"
        android:text="Против" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/vote_abstained"
        style="@style/Widget.AppCompat.Button.Colored"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"

        android:layout_marginHorizontal="96dp"
        android:backgroundTint="#545454"
        android:layout_marginBottom="144dp"
        android:text="Воздержусь" />

</LinearLayout>