<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="24dp"
    android:paddingTop="48dp"
    android:paddingRight="24dp"
    android:paddingBottom="24dp"
    tools:context=".ui.flat_select.FlatSelectActivity">

    <!-- Flat Select Title -->
    <TextView
        android:id="@+id/flat_select_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="@string/flat_select_activity_title"
        android:textAlignment="center"
        android:textColor="#000"
        android:textSize="30sp" />

    <!-- Flat Select Description -->
    <TextView
        android:id="@+id/flat_select_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/flat_select_title"
        android:layout_centerHorizontal="true"
        android:text="@string/flat_select_activity_text" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_centerInParent="true"
        android:layout_width="match_parent"
        android:text="Улица Пушкина, дом Колотушкина 101, кв. 42"
        android:drawableRight="@drawable/ic_baseline_arrow_forward_ios_24"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/flat_select_button"
        style="@style/FlatSelectActivity.Select"
        android:layout_width="fill_parent"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="@string/flat_select_activity_select_button" />
</RelativeLayout>